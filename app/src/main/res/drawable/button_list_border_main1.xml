<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="1dp" android:bottom="1dp" android:state_pressed="true">
        <shape
            android:shape="rectangle">

            <solid android:color="#CCFFCC" />
            <corners android:bottomRightRadius="14dip"
                android:bottomLeftRadius="14dip"
                android:topRightRadius="14dip"
                android:topLeftRadius="14dip"/>
            <gradient
                android:startColor="#1D607E"
                android:endColor="#3549B1"
                android:angle="270" />
        </shape>
    </item>
    <item android:top="1dp" android:bottom="1dp">
        <shape
            android:shape="rectangle">

            <solid android:color="#6F87C5" />
            <corners android:bottomRightRadius="14dip"
                android:bottomLeftRadius="14dip"
                android:topRightRadius="14dip"
                android:topLeftRadius="14dip"/>
            <gradient
                android:startColor="#CCFFCC"
                android:endColor="#29338E"
                android:angle="270" />
        </shape>
    </item>
</selector>